{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "alexacrdemo": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "alexacrdemo.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "classifier": {
            "version": "1.5",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.classifier}",
              "createOptions": {}
            }
          },
          "cameraCapture": {
            "version": "1.5",
            "type": "docker",
            "env": {
              "ENABLED": {
                  "value": true
              }
            },
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.cameraCapture}",
              "createOptions": {
                "HostConfig": { "Privileged": true },
                  "Env":[
                    "IMAGE_PATH=image.jpg",
                    "IMAGE_PROCESSING_ENDPOINT=http://classifier/image",
                    "BLOB_ACC=ai100demoalex",
                    "BLOB_KEY=NrHaeME21BJTP9AG+slYshqugIDrAVVwj3wiZlbruMOSaEk85INnmn4889Af9DbWIwRF49GVGj+LkMwXmrvNsA=="]
                  }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "cameraCaptureToIoTHub": "FROM /messages/modules/cameraCapture/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}